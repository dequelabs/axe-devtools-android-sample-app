{
  "name": "axe-devtools-appium-tests",
  "version": "1.0.0",
  "description": "Appium JavaScript test suite for AxeDevTools Android Sample App",
  "main": "index.js",
  "scripts": {
    "test": "wdio run ./config/wdio.conf.js && npm run report:generate",
    "test:navigation": "wdio run ./config/wdio.conf.js --spec ./test/01-navigation.spec.js && npm run report:generate",
    "test:menu": "wdio run ./config/wdio.conf.js --spec ./test/02-menu.spec.js && npm run report:generate",
    "test:catalog": "wdio run ./config/wdio.conf.js --spec ./test/03-catalog.spec.js && npm run report:generate",
    "test:cart": "wdio run ./config/wdio.conf.js --spec ./test/04-cart.spec.js && npm run report:generate",
    "test:e2e": "wdio run ./config/wdio.conf.js --spec ./test/06-e2e.spec.js && npm run report:generate",
    "report:generate": "marge test-reports/mochawesome/*.json --reportDir test-reports/mochawesome --reportFilename report.html --inline",
    "appium": "appium",
    "setup": "npm install && mkdir -p screenshots test-reports/mochawesome"
  },
  "keywords": [
    "appium",
    "android",
    "testing",
    "automation",
    "axe-devtools",
    "accessibility"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@wdio/appium-service": "^8.40.3",
    "@wdio/cli": "^8.40.6",
    "@wdio/local-runner": "^8.40.6",
    "@wdio/mocha-framework": "^8.40.3",
    "@wdio/spec-reporter": "^8.40.3",
    "appium": "^2.11.5",
    "appium-uiautomator2-driver": "^3.7.10",
    "chai": "^4.5.0",
    "wdio-html-nice-reporter": "^8.0.8"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2",
    "ts-node": "^10.9.2",
    "wdio-mochawesome-reporter": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
