<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_res"
    app:startDestination="@id/catalog">

    <fragment
        android:id="@+id/catalog"
        android:name="com.deque.mobile.axedevtoolssampleapp.FragmentCatalog"
        android:label="Catalog"
        tools:layout="@layout/fragment_catalog" >
        <action
            android:id="@+id/action_catalog_to_cart"
            app:destination="@id/cart"
            app:popUpTo="@id/nav_res" />
        <action
            android:id="@+id/action_catalog_to_menu"
            app:destination="@id/menu"
            app:popUpTo="@id/catalog"/>
    </fragment>

    <fragment
        android:id="@+id/cart"
        android:name="com.deque.mobile.axedevtoolssampleapp.FragmentCart"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/menu"
        android:name="com.deque.mobile.axedevtoolssampleapp.FragmentMenu"
        android:label="Menu"
        tools:layout="@layout/fragment_menu" />

</navigation>