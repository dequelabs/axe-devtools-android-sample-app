<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_acronym"
        style="@style/Theme.AxeDevToolsSampleApp.TitleAcronym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        style="@style/Theme.AxeDevToolsSampleApp.LogoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/xlg"
        android:paddingTop="@dimen/md"
        android:paddingEnd="@dimen/xlg"
        android:paddingBottom="@dimen/md"
        android:text="@string/app_title"
        app:layout_constraintTop_toTopOf="@id/title_acronym"
        app:layout_constraintBottom_toBottomOf="@id/title_acronym"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        style="@style/Theme.AxeDevToolsSampleApp.Button"
        android:id="@+id/start_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/xxlg"
        android:layout_marginEnd="@dimen/xxlg"
        android:layout_marginBottom="@dimen/xxlg"
        android:text="@string/start_xml"
        app:layout_constraintBottom_toTopOf="@+id/start_button_compose"
        app:layout_constraintStart_toStartOf="@id/title_acronym"
        app:layout_constraintEnd_toEndOf="@id/title_acronym" />

    <Button
        style="@style/Theme.AxeDevToolsSampleApp.Button"
        android:id="@+id/start_button_compose"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/lg"
        android:layout_marginEnd="@dimen/lg"
        android:layout_marginBottom="@dimen/xxlg"
        android:text="@string/start_compose"
        app:layout_constraintStart_toStartOf="@id/title_acronym"
        app:layout_constraintEnd_toEndOf="@id/title_acronym"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="@dimen/lg"
        android:layout_marginEnd="@dimen/lg"
        android:layout_marginBottom="@dimen/lg"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/start_button_compose"
        app:layout_constraintEnd_toEndOf="@id/start_button_compose" />

</androidx.constraintlayout.widget.ConstraintLayout>